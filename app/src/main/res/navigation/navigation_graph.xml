<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.cindymb.airportapplication.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_splashFragment_to_departureFragment"
            app:destination="@id/departureFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.cindymb.airportapplication.ui.nearby.NearbyFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_departureFragment"
            app:destination="@id/departureFragment" />
    </fragment>

    <fragment
        android:id="@+id/departureFragment"
        android:name="com.cindymb.airportapplication.ui.schedule.FlightScheduleFragment"
        android:label="fragment_departure"
        tools:layout="@layout/fragment_departure" >

        <!--Mandatory argument-->
        <argument
            android:name="iataCode"
            app:argType="string" />

    </fragment>
</navigation>