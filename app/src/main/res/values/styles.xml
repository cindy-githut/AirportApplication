<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogCustom" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@color/black</item>
    </style>

    <!--Base font with text size 12sp and black_gray text-->
    <!--BaseFont-->
    <style name="BaseFont">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/color_black_gray</item>
    </style>

    <!--BaseRobotoRegular font with BaseFont as parent and  Roboto Regular font-->
    <!--BaseRobotoRegular-->
    <style name="BaseRobotoRegular" parent="BaseFont">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--BaseRobotoMedium font with BaseFont as parent and  Roboto Medium font-->
    <!--BaseRobotoMedium-->
    <style name="BaseRobotoMedium" parent="BaseFont">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!--BaseRobotoRegular-->
    <!--BaseRobotoRegular font with text size 12sp -->
    <style name="FontBlackGray12Regular" parent="BaseRobotoRegular">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <!--BaseRobotoRegular font with text size 14sp -->
    <style name="FontBlackGray14Regular" parent="BaseRobotoRegular">
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <!--FontBlue14Medium-->
    <!--BaseRobotoMedium font with text size 14sp and base blue text color-->
    <style name="FontBlue14Medium" parent="BaseRobotoMedium">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:color">@color/color_base_blue</item>
    </style>

    <!--FontBlue14Medium-->
    <!--BaseRobotoMedium font with text size 16sp and black text color-->
    <style name="FontBlack16Medium" parent="BaseRobotoMedium">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <!--collapsing toolbar style-->
    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
